<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_project_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="true"
        android:elevation="0dp"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_new_one"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:elevation="0dp"
                    android:foreground="@drawable/shape_bottom_shadow"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_item_more_wallpaper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@null" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/colorGreenLowOpctyV3"
                android:elevation="0dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="-1dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/cairo_semibold"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.02"
                    android:maxLines="1"
                    android:text="see more"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_profile_image_card_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_new_one"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_content_image_home"
                    android:layout_width="42dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="0dp"
                    android:backgroundTint="@android:color/transparent"
                    android:elevation="0dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_profile_image_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@null" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_new_one"
                android:layout_alignBaseline="@+id/layout_profile_image_card_more"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/layout_profile_image_card_more"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_item_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/cairo"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.02"
                    android:maxLines="1"
                    android:text="Carla de oliveira"
                    android:textColor="@color/colorLight010"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>