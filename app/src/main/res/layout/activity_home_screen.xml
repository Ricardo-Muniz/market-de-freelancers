<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDrk"
    android:gravity="center"
    tools:context=".Activity.HomeScreen">


    <ProgressBar
        android:id="@+id/progress_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrool_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="visible"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.06"
                        android:lineSpacingExtra="0dp"
                        android:text="Category"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_home_design_project"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginStart="18dp"
                            android:backgroundTint="@color/colorAlertOrangeOpacity"
                            android:clickable="true"
                            android:elevation="0dp"
                            android:focusable="true"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="18dp"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:id="@+id/card_suggest_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@id/layout_label_name_category">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@android:color/transparent"
                                        android:elevation="0dp"
                                        app:cardCornerRadius="6dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/shape_img_profile_responses"
                                            android:rotation="270"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/icon_arrow_dowm_white" />

                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_label_name_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_title_label_card_suggest"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-1dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/cairo"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="Design"
                                        android:textColor="@color/colorLight010"
                                        android:textSize="16sp"
                                        android:textStyle="normal"
                                        android:typeface="sans" />

                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_home_dev_project"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="@color/colorAlertOrangeOpacity"
                            android:clickable="true"
                            android:elevation="0dp"
                            android:focusable="true"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="18dp"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:id="@+id/card_suggest_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@id/layout_label_name_category_dev">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@android:color/transparent"
                                        android:elevation="0dp"
                                        app:cardCornerRadius="6dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/shape_img_profile_responses"
                                            android:rotation="270"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/icon_arrow_dowm_white" />

                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_label_name_category_dev"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-1dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/cairo"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="Development"
                                        android:textColor="@color/colorLight010"
                                        android:textSize="16sp"
                                        android:textStyle="normal"
                                        android:typeface="sans" />

                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_home_art_project"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="@color/colorAlertOrangeOpacity"
                            android:clickable="true"
                            android:elevation="0dp"
                            android:focusable="true"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="18dp"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:id="@+id/card_suggest_three"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@id/layout_label_name_category_art">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@android:color/transparent"
                                        android:elevation="0dp"
                                        app:cardCornerRadius="6dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/shape_img_profile_responses"
                                            android:rotation="270"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/icon_arrow_dowm_white" />

                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_label_name_category_art"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_title_label_card_suggest3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-1dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/cairo"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="Art and illustartion"
                                        android:textColor="@color/colorLight010"
                                        android:textSize="16sp"
                                        android:textStyle="normal"
                                        android:typeface="sans" />

                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_home_product_project"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="18dp"
                            android:backgroundTint="@color/colorAlertOrangeOpacity"
                            android:clickable="true"
                            android:elevation="0dp"
                            android:focusable="true"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="18dp"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:id="@+id/card_suggest_four"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@id/layout_label_name_category_product">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@android:color/transparent"
                                        android:elevation="0dp"
                                        app:cardCornerRadius="6dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/shape_img_profile_responses"
                                            android:rotation="270"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/icon_arrow_dowm_white" />

                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_label_name_category_product"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_title_label_card_suggest5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-1dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/cairo"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="Product"
                                        android:textColor="@color/colorLight010"
                                        android:textSize="16sp"
                                        android:textStyle="normal"
                                        android:typeface="sans" />

                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.06"
                        android:lineSpacingExtra="0dp"
                        android:text="New projects"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3.5dp"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:elevation="0dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:id="@+id/button_more_new_project"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/more_icon_arrow" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="18dp"
                    android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/grid_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lau"
                android:background="@color/colorDrk">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_home_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:minHeight="150dp"
                    android:paddingStart="18dp">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid_new"
                android:layout_marginStart="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="0dp"
                    android:text="All"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:elevation="0dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/button_more_all_project"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/more_icon_arrow" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/all"
                android:layout_marginBottom="20dp"
                android:background="@color/colorDrk">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_home_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:minHeight="150dp"
                    android:paddingStart="18dp">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>